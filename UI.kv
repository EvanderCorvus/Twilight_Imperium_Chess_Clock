BoxLayout:
    orientation: 'vertical'
    Label:
        id: player1_time
        text: 'Player 1 Time'
    Label:
        id: player2_time
        text: 'Player 2 Time'
    Button:
        text: 'Start'
        on_press: app.start_clock()
    Button:
        text: 'Pause'
        on_press: app.stop_clock()
    Button:
        text: 'Reset'
        on_press: app.reset_clock()
    Button:
        text: 'Pass'
        on_press: app.pass()
